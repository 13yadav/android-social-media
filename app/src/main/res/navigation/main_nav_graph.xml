<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.strangecoder.socialmedia.ui.auth.fragments.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.strangecoder.socialmedia.ui.auth.fragments.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.HomeFragment"
        android:label="Home" />
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.CreatePostFragment"
        android:label="Create Post" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.EditProfileFragment"
        android:label="Edit Profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/editProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.MessagesFragment"
        android:label="Messages" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.SearchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/othersProfileFragment"
        android:name="com.strangecoder.socialmedia.ui.main.fragments.OthersProfileFragment"
        android:label="User Profile">
        <argument
            android:name="uid"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_to_othersProfileFragment"
        app:destination="@id/othersProfileFragment" />
    <dialog
        android:id="@+id/commentDialog"
        android:name="com.strangecoder.socialmedia.ui.main.dialogs.CommentDialog"
        android:label="Comments">
        <argument
            android:name="postId"
            app:argType="string" />
    </dialog>
    <action
        android:id="@+id/globalActionToCommentDialog"
        app:destination="@id/commentDialog" />
    <action
        android:id="@+id/globalToLoginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/auth_nav_graph"
        app:popUpToInclusive="true" />
</navigation>